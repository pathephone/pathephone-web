{
  "name": "pathephone-web",
  "version": "0.0.0-development",
  "private": true,
  "homepage": "https://pathephone.github.io/pathephone-web",
  "repository": {
    "type": "git",
    "url": "https://github.com/pathephone/pathephone-web.git"
  },
  "dependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@testing-library/react": "^8.0.1",
    "@testing-library/react-hooks": "^1.1.0",
    "flow-bin": "^0.102.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "music-metadata-browser": "^0.7.1",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.0.1",
    "react-test-renderer": "^16.8.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "flow": "flow",
    "style:write": "prettier \"src/**/*.{js,jsx,css}\" --write",
    "style:check": "prettier \"src/**/*.{js,jsx,css}\" --check",
    "commitlint": "commitlint from=HEAD",
    "predeploy": "npm run build",
    "deploy": "node ./publish.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run style:write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
